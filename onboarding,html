  <!-- Glowbot mascot -->
  <img src="glowbot.png" class="bot-img">

  <!-- Voice button -->
  <button id="voice-button"></button>

  <!-- Status text -->
  <div class="status" id="status">
    Speak With an Agent
  </div>

  <script src="https://cdn.jsdelivr.net/gh/balacodeio/Vapi-Web-UMD@latest/dist/latest/vapi-web-bundle.min.js"></script>

  <script>
    const button = document.getElementById('voice-button');
    const status = document.getElementById('status');

    let vapi = null;

    function initVapi() {
      if (window.Vapi) {
        vapi = new window.Vapi("b66ad6e7-ec9d-421c-88b7-157068b27f6d");
        status.innerHTML = "Speak With an Agent";

        vapi.on("call-start", () => {
          button.classList.add("listening");
          status.innerHTML = "Listening…";
        });

        vapi.on("call-end", () => {
          button.classList.remove("listening");
          status.innerHTML = "Speak With an Agent";
        });

        vapi.on("error", (e) => {
          console.error("Vapi error:", e);
          status.innerHTML = "Error — check console";
          button.classList.remove("listening");
        });
      } else {
        status.innerHTML = "SDK failed to load";
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initVapi);
    } else {
      initVapi();
    }

    button.addEventListener("click", () => {
      if (!vapi) return status.innerHTML = "SDK not ready";

      if (button.classList.contains("listening")) {
        vapi.stop();
      } else {
        status.innerHTML = "Connecting…";
        vapi.start("fa8f1412-b632-4ecf-bf14-004262557389");
      }
    });

    /* -------------------------------------------------- */
    /* UNIVERSAL SCRIPT BLOCK FOR ALL FUTURE PAGES       */
    /* -------------------------------------------------- */
    console.log("Glowbots universal script loaded for onboarding page.");
  </script>

</body>
