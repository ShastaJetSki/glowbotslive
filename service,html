  <!-- VAPI SDK -->
  <script src="https://cdn.jsdelivr.net/gh/balacodeio/Vapi-Web-UMD@latest/dist/latest/vapi-web-bundle.min.js"></script>

  <script>
    /* TEXT BLOCKS */
    const paragraph1 =
`Use these numbers to test the system.

        510-555-9999
        415-555-1234`;

    const paragraph2 =
`ask her things like.
when will it be done, how much
what did the mechanic say?
did you order the parts?`;

    const twElement = document.getElementById("typewriter");

    let textQueue = [paragraph1, paragraph2];
    let current = 0;
    let charIndex = 0;

    function typeWriter() {
      let text = textQueue[current];

      if (charIndex < text.length) {
        twElement.textContent += text.charAt(charIndex);
        charIndex++;

        const burst = Math.random() * 120 + 20;
        setTimeout(typeWriter, burst);

      } else {
        /* Paragraph done */
        if (current === 0) {
          /* FIRST PARAGRAPH — WAIT THEN SCROLL UP */
          setTimeout(() => {
            twElement.style.transform = "translateY(-90px)";
            setTimeout(() => {
              /* Start paragraph 2 */
              current = 1;
              charIndex = 0;
              twElement.textContent = "";
              twElement.style.transform = "translateY(0px)";
              typeWriter();
            }, 2500);
          }, 1800);
        }
      }
    }

    setTimeout(typeWriter, 800);

    /* VAPI CONNECTION — BAD CODE EXACT COPY */
    let vapi = null;
    const button = document.getElementById("voice-button");
    const status = document.getElementById("status");

    function initVapi() {
      if (window.Vapi) {
        vapi = new window.Vapi("b66ad6e7-ec9d-421c-88b7-157068b27f6d");

        status.textContent = "Push to speak to Sony6";

        vapi.on("call-start", () => {
          button.classList.add("listening");
          status.textContent = "Sony6 listening…";
        });

        vapi.on("call-end", () => {
          button.classList.remove("listening");
          status.textContent = "Call ended";
        });
      }
    }

    document.addEventListener("DOMContentLoaded", initVapi);

    button.addEventListener("click", () => {
      if (!vapi) return;

      if (button.classList.contains("listening")) {
        vapi.stop();
      } else {
        vapi.start("fa8f1412-b632-4ecf-bf14-004262557389");
      }
    });
  </script>

